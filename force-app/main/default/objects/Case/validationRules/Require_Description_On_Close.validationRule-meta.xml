<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Require_Description_On_Close</fullName>
    <active>true</active>
    <description>Prevents users from closing a case without a description.</description>
    <errorConditionFormula>AND(
    ISPICKVAL(Status, &quot;Closed&quot;),
    ISBLANK(Description)
)</errorConditionFormula>
    <errorDisplayField>Description</errorDisplayField>
    <errorMessage>Please enter a Description before closing the case.</errorMessage>
</ValidationRule>
